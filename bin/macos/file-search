#!/usr/bin/env bash

~/bin/focus-wezterm-picker $1

dirs=(~/Downloads/ ~/Documents/ ~/projects/)
files=$(fd . ~/Documents ~/Downloads ~/projects)

selected_item=$(
    {
        printf '%s\n' "${files}"
        printf '%s\n' "${dirs[@]}"
    } | fzf
)

if [ ! -z "${selected_item}" ]; then
    open "$selected_item"
fi
