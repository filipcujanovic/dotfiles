[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta
[include]
  path = ~/dotfiles/.config/delta/themes/themes.gitconfig
[delta]
	;features = catppuccin-mocha
	features = gruvmax-fang
	navigate = true
	line-numbers = true
[interactive]
	diffFilter = delta --color-only
[pull]
	ff = only
[merge]
	conflictstyle = diff3
[mergetool "nvimdiff"]
	layout = LOCAL,BASE,REMOTE
[merge]
	tool = nvimdiff
[init]
	defaultBranch = main
